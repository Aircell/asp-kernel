menuconfig OMAP3LOGIC_BACKUP_BATTERY_ENABLE
	default n
	bool "OMAP3LOGIC backup battery charge enable"
	depends on (MACH_OMAP3530_LV_SOM || MACH_OMAP3_TORPEDO) && TWL4030_BCI_BATTERY

if OMAP3LOGIC_BACKUP_BATTERY_ENABLE

choice
	prompt "Battery charge current"
	default OMAP3LOGIC_BACKUP_BATTERY_C25

config OMAP3LOGIC_BACKUP_BATTERY_C25
	bool "25uA"
	help
		Selects a backup battery charge current of 25uA

config OMAP3LOGIC_BACKUP_BATTERY_C150
	bool "150uA"
	help
		Selects a backup battery charge current of 150uA

config OMAP3LOGIC_BACKUP_BATTERY_C500
	bool "500uA"
	help
		Selects a backup battery charge current of 500uA

config OMAP3LOGIC_BACKUP_BATTERY_C1000
	bool "1000uA"
	help
		Selects a backup battery charge current of 1000uA
endchoice

choice
	prompt "Battery charge voltage"
	default OMAP3LOGIC_BACKUP_BATTERY_V26

config OMAP3LOGIC_BACKUP_BATTERY_V25
	bool "2.5V"
	help
		Selects a backup battery charge voltage of 2.5V

config OMAP3LOGIC_BACKUP_BATTERY_V30
	bool "3.0V"
	help
		Selects a backup battery charge current of 3.0V

config OMAP3LOGIC_BACKUP_BATTERY_V31
	bool "3.1V"
	help
		Selects a backup battery charge current of 3.1V

config OMAP3LOGIC_BACKUP_BATTERY_V32
	bool "3.2V"
	help
		Selects a backup battery charge current of 3.2V
endchoice

endif # if OMAP3LOGIC_BACKUP_BATTERY_ENABLE

